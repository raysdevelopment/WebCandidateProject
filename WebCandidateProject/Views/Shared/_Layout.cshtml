<!DOCTYPE html>
<html ng-app="wpApp" class="no-js">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <base href="/" />
    <title>@ViewBag.Title - Web Candidate Project</title>
    @Styles.Render("~/Content/themes/base/css",
                   "~/Content/css")

    @RenderSection("styles", false)
    @RenderSection("require", false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Web Candidate Project", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Task 1", "Task1", "JavaScript")</li>
                    <li>@Html.ActionLink("Task 2", "Task2", "JavaScript")</li>
                    <li>@Html.ActionLink("Task 3", "Task3", "JavaScript")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Web Candidate Project</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
